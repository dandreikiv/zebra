

<%= form_for @video do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p> 
	<p>
		<%= f.label :url %>
		<%= f.text_field :url %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</p>
	<p>
		<%= f.label :author %>
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.submit "Add new video" %>
	</p>
	
<% end %>